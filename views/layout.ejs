  <!-- Navigation -->
  <div class="nav-main">
    <div><nav><a href="#">Bästsäljare</a></nav></div>
    <div><nav><a href="#">Sommar Tält</a></nav></div>
    <div><nav><a href="#">Vinter Tält</a></nav></div>
  </div>
<body>
  <!--  Warning Message -->
    
  <% if (message && message !== '') { %>
    <div class="message-box-warning" id="warningBox">
      <%= message %>
    </div>
    <script>
      setTimeout(() => {
        const box = document.getElementById('warningBox');
        if (box) {
          box.classList.add('fade-out');
          setTimeout(() => {
            box.style.display = 'none';
          }, 500);
        }
      }, 4000);
    </script>
  <% } %>

  <!-- Page Content -->
  <%- body %>
</body>
