    <h3 class="check-out-text-over frist-table-under-640px">Varukorgen</h3>
    <table class="check-out-table-mobile">
      <% if (cartItems && cartItems.length > 0) { %>
        <% let totalSumMobile = 0; %>
        <% cartItems.forEach(item => {
          const itemTotal = item.Cart_quantity * item.productsprice;
          totalSumMobile += itemTotal;
        %>
        <tr>
          <td>
            <form action="/cart/update" method="POST">
              <input type="hidden" name="Cart_productBody_id" value="<%= item.Cart_product_id %>">
