                <% } %>
              </select>
            </form>
          </td>
          <td>x&nbsp;<%= item.productstName %></td>
          <td><%= item.productsprice * item.Cart_quantity %> SEK</td>
          <td>
            <form action="/cart/delete" method="POST">
              <input type="hidden" name="Cart_productBody_id" value="<%= item.Cart_product_id %>">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="2"><strong>Totalt Pris:</strong></td>
