    <% if (message != '') { %>
  <div class="message-box-warning" id="warningBox">
    <%= message %>
    <!-- <button class="close-btn" onclick="document.getElementById('warningBox').style.display='none';">&times;</button> -->
  </div>

  <script>
    setTimeout(() => {
      const box = document.getElementById('warningBox');
      if (box) {
        box.classList.add('fade-out');
        setTimeout(() => {
          box.style.display = 'none';
        }, 500); // match transition time
      }
    }, 4000); // Hides after 4 seconds
  </script>
<% } %>

    <!-- End Navigation -->

    <!-- Hero Section -->
    <div class="main-container-hero">
